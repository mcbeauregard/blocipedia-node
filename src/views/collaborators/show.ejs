<% if(collaborator) { %>
    <div style="width: 50%">
      <hr>
      <p>
        <%= collaborator.userId %>
      </p>
  
      <% if(currentUser && currentUser.id === collaborator.userId || currentUser.isAdmin()) { %>
        <form style="display:initial"
            action="/wikis/<%= wiki.id %>/collaborators/<%= collaborator.id %>/destroy"
            method="post">
          <button type="submit" class="btn btn btn-sm btn-outline-danger">Delete</button>
        </form>
      <% } %>
      <p>
            <% include ../collaborators/show.ejs %>
          </p>
    
      <hr>
    </div>
<% } %>